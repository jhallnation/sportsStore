<h1><%= @category.title %></h1>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th>Thumb image</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.image %></td>
        <td><%= item.thumb_image %></td>
        <td><%= item.quantity %></td>
        <td><%= link_to 'Show', item %></td>
        <% if logged_in?(:admin) %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'New', new_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
